@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movie.Count == 0)
{
    <text>We don't have any movie yet.</text>
}
else
{
    <ul class="list-group">
        <li class="list-group-item active">Movies</li>
        @foreach (var movie in Model.Movie)
        {
           <li class="list-group-item">@movie.Name</li>
        }
        
    </ul>
}


