@model  IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "List of Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <text>No one has rented this movie before.</text>
}
else
{
    @Html.ActionLink("New Movie", "New", "Movies",null, new { @class = "btn btn-primary" })
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.GenreTypes.Name</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}






