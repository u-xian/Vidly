@{
    ViewBag.Title = "List of Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
    <table id="movies" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre Type</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>


@section scripts
{
    <script>
        $(function () {

            $("#movies").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genreTypes.name"
                    }
                ]
            });
        });
    </script>
}












